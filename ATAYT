    <script>
        function showNotification(message) {
            // Create a notification element
            var notification = document.createElement('div');
            notification.className = 'notification';
            notification.textContent = message;
            document.body.appendChild(notification);

            // Remove the notification after 3 seconds
            setTimeout(function () {
                document.body.removeChild(notification);
            }, 3000);
        }

        function sendOTPNotification() {
            var email = document.getElementById('<%= txtEmail.ClientID %>').value.trim();
            if (email === '') {
                showNotification('You must enter an email address');
                return false;
            } else if (email === '@') {
                showNotification('That\'s not a valid email address. Shut up.');
                return false;
            } else if (email.indexOf('@') === -1) {
                showNotification('You must enter an "@" in the email address');
                return false;
            } else {
                showNotification('OTP has been sent');
                return true;
            }
        }

        function resendOTPNotification() {
            var email = document.getElementById('<%= txtEmail.ClientID %>').value.trim();
            if (email === '') {
                showNotification('You must input a valid email address');
                return false;
            } else {
                // Here you can handle the 404 error for URL not found
                // For now, just display a notification
                showNotification('404 URL not found');
                return false;
            }
        }

        function verifyOTPNotification(result) {
            if (result) {
                showNotification('Verified OTP');
            } else {
                showNotification('OTP not matched');
            }
        }
    </script>
